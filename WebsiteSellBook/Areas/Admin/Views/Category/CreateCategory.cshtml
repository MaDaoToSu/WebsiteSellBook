@model Category

<div class="p-3">
	<div class="card shadow border-0 mt-4 p-3">
		<div class="card-header bg-primary bg-gradient ml-0 py-3">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white py-2">Create Category</h2>
				</div>
			</div>
		</div>

		<form method="post">
			<div class="p-3 border border-primary">
				<div class="mb-3">
					<label asp-for="Category_Name" class="form-label"></label>
					<input asp-for="Category_Name" type="text" class="form-control">
					<span asp-validation-for="Category_Name" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="DisplayOrder" class="form-label"></label>
					<input asp-for="DisplayOrder" type="text" class="form-control">
					<span asp-validation-for="DisplayOrder" class="text-danger"></span>
				</div>

				<button type="submit" class="btn btn-primary me-2">Add new Category</button>
				<a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		<Partial name="_ValidationScriptsPartial" />
	}
	}


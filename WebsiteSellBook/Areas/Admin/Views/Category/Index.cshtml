@model IEnumerable<Category>
@{
	ViewData["Title"] = "Category";
}
<partial name="_Notification" />

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h1>Index Category</h1>
		</div>
		<div class="col-6 text-end">

			<a asp-area="Admin" asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
				<i class="bi bi-plus-circle" style="height:20px; cursor:pointer"></i> &ensp; Add New Category
			</a>
		</div>

	</div>
</div>
<br />
<table class="table">
	<thead class="table-primary">
		<tr>
			<th scope="col">Category ID</th>
			<th scope="col">Category Name</th>
			<th scope="col">Display Order</th>
			<th scope="col">Create Date Time</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<th scope="row">@obj.Category_ID</th>
				<td>@obj.Category_Name</td>
				<td>@obj.DisplayOrder</td>
				<td>@obj.CreatedDateTime</td>
				<td>

					<a asp-area="Admin" asp-controller="Category" asp-action="EditCategory" asp-route-id="@obj.Category_ID"
					   class="btn btn-success"><i class="bi bi-pencil-square" style="height:30px; cursor:pointer"></i>  Edit</a>
					&nbsp;
					<a asp-area="Admin" asp-controller="Category"
					   asp-action="DeleteCategory"
					   asp-route-id="@obj.Category_ID"
					   class="btn btn-primary"><i class="bi bi-trash" style="height:30px; cursor:pointer"></i> Delete</a>

				</td>

			</tr>
		}
	</tbody>
</table>







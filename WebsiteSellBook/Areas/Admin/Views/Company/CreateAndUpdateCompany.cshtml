@model SellBook.Models.Company
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-3">
	<div class="card shadow border-0 mt-4 p-3">
		<div class="card-header bg-primary bg-gradient ml-0 py-3">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white py-2">@ViewBag.Title</h2>
				</div>
			</div>
		</div>
		<div class="row mt-3">
			<div>
				<form method="post" asp-action="CreateAndUpdateCompany">
					<div class="p-3 border border-primary">

						<div class="row">
							<input asp-for="CpmpanyId" type="hidden" />
							<div class="mb-3 col-6">
								<label asp-for="CompanyName" class="form-label"></label>
								<input asp-for="CompanyName" type="text" class="form-control">
								<span asp-validation-for="CompanyName" class="text-danger"></span>
							</div>
							<div class="mb-3 col-6">
								<label asp-for="StressAddress" class="form-label"></label>
								<input asp-for="StressAddress" type="text" class="form-control">
								<span asp-validation-for="StressAddress" class="text-danger"></span>
							</div>
							<div class="mb-3 col-6">
								<label asp-for="City" class="form-label"></label>
								<input asp-for="City" type="text" class="form-control">
								<span asp-validation-for="City" class="text-danger"></span>
							</div>
							<div class="mb-3 col-6">
								<label asp-for="State" class="form-label"></label>
								<input asp-for="State" type="text" class="form-control">
								<span asp-validation-for="State" class="text-danger"></span>
							</div>
							<div class="mb-3 col-6">
								<label asp-for="PostalCode" class="form-label"></label>
								<input asp-for="PostalCode" type="text" class="form-control">
								<span asp-validation-for="PostalCode" class="text-danger"></span>
							</div>
							<div class="mb-3 col-6">
								<label asp-for="PhoneNumber" class="form-label"></label>
								<input asp-for="PhoneNumber" type="text" class="form-control">
								<span asp-validation-for="PhoneNumber" class="text-danger"></span>
							</div>

						</div>

						<button type="submit" class="btn btn-primary me-2">@ViewBag.Title</button>
						<a asp-area="Admin" asp-controller="Company" asp-action="Index" class="btn btn-secondary">Back to List</a>
					</div>
				</form>
			</div>

		</div>

	</div>
</div>

@{

	<Partial name="_ValidationScriptsPartial" />
}


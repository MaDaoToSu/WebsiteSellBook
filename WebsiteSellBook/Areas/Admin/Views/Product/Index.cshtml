@model IEnumerable<Product>
@{
	ViewData["Title"] = "Product";
}

<partial name="_Notification" />

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h1>Index Product</h1>
		</div>
		<div class="col-6 text-end">

			@* <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
			<i class="bi bi-plus-circle" style="height:20px; cursor:pointer"></i> &ensp; Add New Category
			</a> *@
		</div>

	</div>
</div>
<br />
<table class="table">
	<thead class="table-primary">
		<tr>
			<th scope="col">Product ID</th>
			<th scope="col">Title</th>
			<th scope="col">Description</th>
			<th scope="col">ISBN</th>
			<th scope="col">List Price</th>
			<th scope="col">Price 1 - 50</th>
			<th scope="col">Price 50+</th>
			<th scope="col">Price 100+</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<th scope="row">@obj.Product_Id</th>
				<td>@obj.Title</td>
				<td>@obj.ProductDescription</td>
				<td>@obj.ISBN</td>
				<td>@obj.ListPrice</td>
				<td>@obj.Price</td>
				<td>@obj.Price50</td>
				<td>@obj.Price100</td>
				<td>

					<a><i class="bi bi-pencil-square" style="height:30px; cursor:pointer"></i>  Edit</a>
					&nbsp;
					<a class="btn btn-primary"><i class="bi bi-trash" style="height:30px; cursor:pointer"></i> Delete</a>

				</td>

			</tr>
		}
	</tbody>
</table>


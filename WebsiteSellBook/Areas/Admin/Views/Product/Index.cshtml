@model IEnumerable<Product>
@{
	ViewData["Title"] = "Product";
}

<partial name="_Notification" />

<div class="card shadow border-0 mt-4 p-3">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Product List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4 ">
		<div class="row pb-3">
			<div class="col-6"></div>
			<div class="col-6 text-end">
				<a asp-area="Admin" asp-controller="Product" asp-action="CreateProduct" class="btn btn-primary">
					<i class="bi bi-plus-circle" style="height:20px; cursor:pointer"></i> &ensp; Add New Product
				</a>
			</div>
		</div>

	</div>
	<table class="table">
		<thead class="table-primary">
			<tr>
				<th scope="col">Product ID</th>
				<th scope="col">Title</th>
				<th scope="col">Description</th>
				<th scope="col">ISBN</th>
				<th scope="col">List Price</th>
				<th scope="col">Price 1 - 50</th>
				<th scope="col">Price 50+</th>
				<th scope="col">Price 100+</th>
				<th scope="col">Category</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<th scope="row">@obj.Product_Id</th>
					<td>@obj.Title</td>
					<td>@obj.ProductDescription</td>
					<td>@obj.ISBN</td>
					<td>@obj.ListPrice</td>
					<td>@obj.Price</td>
					<td>@obj.Price50</td>
					<td>@obj.Price100</td>
					<td>
						@obj.CategoryId
					</td>
					<td>
						<a asp-area="Admin" asp-controller="Product" asp-action="EditProduct" asp-route-id="@obj.Product_Id" class="btn btn-success"><i class="bi bi-pencil-square" style="height:30px; cursor:pointer"></i>  Edit</a>
						&nbsp;
						<a asp-area="Admin" asp-controller="Product" asp-action="RemoveProduct" asp-route-id="@obj.Product_Id" asp-route-id="@obj.Product_Id" class="btn btn-primary"><i class="bi bi-trash" style="height:30px; cursor:pointer"></i> Delete</a>
					</td>

				</tr>
			}
		</tbody>
	</table>
</div>

